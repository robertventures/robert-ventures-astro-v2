---
import Check from "../images/svg/green-check.svg";

import FormCTA from "../components/FormCTA.astro";
---

<style>
    h2 {
        text-align: center;
        line-height: 1.1;

        margin-bottom: 2rem;
    }

    .list {
        display: flex;
        flex-direction: column;
        gap: 2rem;

        max-width: 366px;

        margin: 0 auto;

        margin-bottom: 2rem;
    }

    .list-item {
        display: flex;
        gap: 0.5rem;
    }

    p.title {
        color: #1d1d1f;
        font-size: 1.125rem;
        font-weight: 500;
        line-height: 1.2;
        margin-bottom: 0.25rem;
    }

    p.info {

        font-size: 1rem;
        font-style: normal;
        font-weight: 400;
        line-height: 160%; /* 1.6rem */
    }

    .list-item {
    }

    .top,
    .bottom {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .list-item svg {
        min-height: 20px;
        min-width: 20px;
    }

    .pre-form-text {
        margin-bottom: 1rem;
        text-align: center;
    }

    @media screen and (min-width: 990px) {
        .list {
            flex-direction: row;
            max-width: none;
            justify-content: space-between;
        }

        .list > div {
            max-width: 366px;
        }
    }
</style>

