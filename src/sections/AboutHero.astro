---
import Image from "astro/components/Image.astro";

import arrow from "../images/design-elements/Arrow-right.svg";
import team from "../images/design-elements/rv-team.png";
import FormCTA from "../components/FormCTA.astro";
---

<style>
    section {
        margin-bottom: 1.5rem;
    }

    .section-container {
        max-width: 1280px;
        margin: 0 auto;
        border-radius: 1rem;
        background: #fff;
        padding: 3rem 1.5rem;
    }

    .section-content {
        max-width: 640px;
        margin: 0 auto;
    }

    h2 {
        color: #281480;
        text-align: center;
        font-size: 2.5625rem;

        font-weight: 700;
        line-height: 1.1; /* 2.475rem */

        margin-bottom: 2rem;
    }

    .info img {
        margin: 0 auto;
        margin-bottom: 2rem;

        max-width: 300px;
        max-height: 96px;
    }

    .info p {
        color: #505050;
        text-align: center;
        font-family: "Inter";
        font-size: 1.25rem;
        font-weight: 500;
        line-height: 150%; /* 1.875rem */

        margin-bottom: 3rem;
    }

    @media only screen and (min-width: 768px) {
        section {
            padding: 0 2rem;
        }
    }
</style>

<section>
    <div class="section-container">
        <div class="section-content">
            <h2>Our Experienced Team</h2>
            <div class="info">
                <Image src={team} alt="herobox" width={600} height={192} />

                <p>
                    At Robert Ventures, our mission is to leverage Joe's decades
                    of experience in real estate and digital assets to maximize
                    growth and deliver strong returns for our investors.
                </p>
            </div>

            <div class="form-cta">
                <FormCTA />
            </div>
        </div>
    </div>
</section>
