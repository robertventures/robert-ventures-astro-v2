---
import FormWebinar from "../components/FormWebinar.astro";
---

<style>
    section {
        background: linear-gradient(to bottom, #101B1F, #111111);
        position: relative;
        color: #E1EEEA;
        padding: 0;
        margin: 0;
        overflow: hidden;
    }

    .section-container {
        position: relative;
        z-index: 1;
        padding: 48px 16px;
        background: transparent;
        border-radius: 0;
        text-align: center;
        width: 100%;
        max-width: 100%;
        margin: 0 auto;
    }

    #main-form .section-content {
        margin: 0;
        margin-left: 0;
        margin-right: 0;
        width: 100%;
        max-width: 100%;
        height: 100%;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        align-items: start;
    }

    .content-column {
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: none;
        gap: 32px;
    }

    .content-column p {
        font-family: 'Roboto', sans-serif;
        font-weight: 400;
        line-height: 150%;
        font-size: 20px;
        margin-bottom: 0;
    }

    .webinar-time-wrapper {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }


    .form-column {
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: none;
        margin-left: auto;
    }


    h1 {
        font-size: 48px;
        margin: 0;
        margin-left: 0;
        margin-right: 0;
        margin-bottom: 0;
        text-align: left;
        font-weight: 500;
        color: #E1EEEA;
    }


    .form-cta {
        width: 100%;
    }

    hr {
        height: 0.0625rem;
        background: #30414D;
        margin-bottom: 1rem;
    }


    .pre-form-headline {
        color: #BFD1D7;
        font-family: 'Roboto', sans-serif;
        font-size: 20px;
        font-weight: 400;
        line-height: 150%;

        margin-bottom: 0;
        margin-top: 0;
        margin-left: 0;
        margin-right: 0;

        display: flex;
        justify-content: flex-start;
        align-items: center;
        gap: 0.5rem;
        width: fit-content;
        text-align: left;
    }

    .pre-form-headline .highlight-returns {
        color: #D3FBD8;
        text-decoration: none;
        background: none;
        background-clip: unset;
        -webkit-background-clip: unset;
        -webkit-text-fill-color: #D3FBD8;
    }

    .next-webinar {
        color: #E1EEEA;
        font-family: 'Roboto', sans-serif;
        font-size: 20px;
        font-weight: 400;
        width: 100%;
        line-height: 150%;
        text-align: left;
        margin-top: 0;
        margin-bottom: 0;
        margin-left: 0;
        margin-right: 0;
    }

    .time {
        display: flex;
        justify-content: flex-start;
        gap: 8px;
        margin-top: 0;
        margin-bottom: 0;
        margin-left: 0;
        margin-right: 0;
        width: 100%;
    }

    .time div {
        font-weight: 600;
        color: #E1EEEA;
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 1px solid #152429;
        border-radius: 4px;
        flex: 1;
        min-width: 0;
        padding: 16px;
    }

    .time div span {
        font-family: 'Roboto Serif', serif;
        font-size: 40px;
        font-weight: 500;
        line-height: 100%;
        color: #D3FBD8;
        font-variant-numeric: lining-nums;
        background: none;
        -webkit-text-fill-color: #D3FBD8;
        background-clip: unset;
        -webkit-background-clip: unset;
    }

    .time div p {
        font-family: 'Roboto', sans-serif;
        font-size: 16px;
        font-weight: 400;
        line-height: 100%;
        margin: 0;
        margin-top: 0.25rem;
        color: #BFD1D7;
    }

    svg {
        display: inline-block;
        max-height: 100%;
        width: auto;
    }

    span {
        background: linear-gradient(90deg, #5028ff 0%, #ff592c 100%);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }



    @media only screen and (min-width: 768px) {
        section {
            padding: 0;
            margin: 0;
        }
    }

    @media only screen and (min-width: 600px) and (max-width: 1135px) {
        .section-container {
            padding: 64px 32px;
        }

        .content-column {
            max-width: none;
        }

        .form-column {
            max-width: none;
        }
    }

    @media only screen and (min-width: 1136px) {
        .section-container {
            padding: 96px 112px;
            margin: 0;
            width: 100%;
        }

        .content-column {
            max-width: 640px;
        }

        .form-column {
            max-width: 480px;
            margin-left: auto;
        }
    }

    @media only screen and (min-width: 1920px) {
        .section-container {
            padding: 96px 312px;
        }
    }

    @media only screen and (max-width: 1135px) {
        #main-form .section-content {
            grid-template-columns: 1fr;
        }
    }

    @media only screen and (min-width: 1136px) {
        h1 {
            margin-bottom: 0;
            font-size: 48px;
            text-align: left;
            font-weight: 500;
        }
    }

    input, select {
        background-color: #E1EEEA;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        padding: 12px 16px;
        font-size: 16px;
        color: #1a1a1a;
        width: 100%;
    }

    input::placeholder, select::placeholder {
        color: #6b7280;
    }

    input:focus, select:focus {
        outline: none;
        border-color: #1e40af;
        box-shadow: 0 0 0 3px rgba(30, 64, 175, 0.1);
    }
</style>

