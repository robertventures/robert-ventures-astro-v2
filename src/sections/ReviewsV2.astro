<style>
    section {
        background: #f2f2f2;
        color: #152429;
        padding: 0;
        margin: 0;
    }

    .section-container {
        padding: 48px 16px;
        text-align: left;
        width: 100%;
        max-width: 100%;
        margin: 0 auto;
        background: transparent;
        border-radius: 0;
    }

    h2 {
        font-family: 'Roboto Serif', serif;
        font-size: 40px;
        font-weight: 500;
        margin: 0;
        margin-bottom: 32px;
        line-height: 110%;
        text-align: left;
        color: #152429;
        font-variant-numeric: lining-nums;
    }

    .reviews-grid {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .review-card {
        background: #ffffff;
        border-radius: 8px;
        padding: 24px;
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .quote {
        font-family: 'Roboto', sans-serif;
        font-size: 18px;
        font-weight: 400;
        font-style: italic;
        color: #152429;
        line-height: 150%;
        margin: 0;
    }

    .reviewer-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .reviewer-image {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: block;
        background: #D3FBD8;
        flex-shrink: 0;
    }

    .review-card:nth-child(1) .reviewer-image {
        background: #D3FBD8;
    }

    .review-card:nth-child(2) .reviewer-image {
        background: #BEE2C2;
    }

    .review-card:nth-child(3) .reviewer-image {
        background: #79EAAD;
    }

    .reviewer-name {
        font-family: 'Roboto', sans-serif;
        font-size: 16px;
        font-weight: 500;
        color: #152429;
        margin: 0;
        line-height: 100%;
    }

    .stars {
        display: flex;
        gap: 2px;
        margin-left: auto;
        background: #f2f2f2;
        padding: 8px 12px;
        border-radius: 20px;
    }

    .star {
        color: #FACC15;
        font-size: 16px;
    }

    @media only screen and (min-width: 600px) and (max-width: 1135px) {
        .section-container {
            padding: 64px 32px;
        }

        h2 {
            font-size: 48px;
        }

        .reviews-grid {
            flex-direction: row;
            gap: 16px;
        }

        .review-card {
            flex: 1;
        }
    }

    @media only screen and (min-width: 1136px) {
        section {
            padding: 0 56px;
        }

        .section-container {
            padding: 96px 56px;
            margin: 0;
            width: 100%;
        }

        h2 {
            font-size: 56px;
        }

        .reviews-grid {
            flex-direction: row;
            gap: 24px;
        }

        .review-card {
            flex: 1;
        }
    }

    @media only screen and (min-width: 1920px) {
        section {
            padding: 0 156px;
        }

        .section-container {
            padding: 96px 156px;
        }
    }
</style>

