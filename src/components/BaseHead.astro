<!-- deviceDetection.js: Detects device type (desktop, ios, android, mobile) and stores it in localStorage for analytics and attribution. -->
<script src="/scripts/deviceDetection.js" defer></script>
<!-- EVENTS HANDLER -->

<!-- REDTRACK — captures RTK click ID on every page for ad attribution -->
<!-- Intercepts uniclick.js API calls so they go through our first-party proxy (/rtk/*) -->
<!-- This prevents Firefox ETP and Safari ITP from blocking the tracking requests -->
<script is:inline define:vars={{ rtkCampaignId }}>
  (function () {
    // 1. Immediately grab clickid from URL and save to localStorage (can't be blocked)
    try {
      var clickid = new URLSearchParams(window.location.search).get("clickid");
      if (clickid) localStorage.setItem("rtk_click_id", clickid);
    } catch (e) {}

    if (window.__rtkUniclickInit) return;
    window.__rtkUniclickInit = true;

    // 2. Rewrite uniclick.js API calls from rt.robertventures.com → /rtk/ (first-party proxy)
    //    uniclick.js hardcodes "https://rt.robertventures.com/" for its XHR/fetch calls,
    //    which Firefox and Safari block as third-party tracking. This rewrites them.
    var rtkOrigin = "https://rt.robertventures.com/";
    var rtkProxy = "/rtk/";

    var origOpen = XMLHttpRequest.prototype.open;
    XMLHttpRequest.prototype.open = function () {
      var args = Array.prototype.slice.call(arguments);
      if (typeof args[1] === "string" && args[1].indexOf(rtkOrigin) === 0) {
        args[1] = args[1].replace(rtkOrigin, rtkProxy);
      }
      return origOpen.apply(this, args);
    };

    var origFetch = window.fetch;
    window.fetch = function () {
      var args = Array.prototype.slice.call(arguments);
      if (typeof args[0] === "string" && args[0].indexOf(rtkOrigin) === 0) {
        args[0] = args[0].replace(rtkOrigin, rtkProxy);
      }
      return origFetch.apply(this, args);
    };

    // 3. Load uniclick.js via first-party proxy
    var host = window.location.hostname.replace(/^www\./, "");
    var script = document.createElement("script");
    script.src =
      "/rtk/uniclick.js?attribution=lastpaid&clickid=clickid&cookiedomain=" +
      encodeURIComponent(host) +
      "&cookieduration=90&defaultcampaignid=" + encodeURIComponent(rtkCampaignId) +
      "&regviewonce=false";
    document.head.appendChild(script);

    // 4. Poll for rtkClickID and persist to localStorage (self-contained, no dependency on form)
    var attempts = 0;
    var poll = setInterval(function () {
      attempts++;
      var id = window.rtkClickID;
      if (!id) {
        try {
          var c = document.cookie.match(/(?:^|;\s*)rtkclickid-store=([^;]*)/);
          if (c) id = c[1];
        } catch (e) {}
      }
      if (id) {
        try { localStorage.setItem("rtk_click_id", id); } catch (e) {}
        clearInterval(poll);
      } else if (attempts >= 40) {
        clearInterval(poll);
      }
    }, 500);
  })();
</script>
