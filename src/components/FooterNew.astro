---
import Rvlogo from "../images/svg/rv-logo.svg";


import Youtube from "../images/svg/socials/youtube.svg";
import X from "../images/svg/socials/x.svg";
import Instagram from "../images/svg/socials/instagram.svg";
import Linkedin from "../images/svg/socials/linkedin.svg";
import Facebook from "../images/svg/socials/facebook.svg";
---

<style>
    footer {
        margin-bottom: 1.5rem;
    }

    .footer-container {
        max-width: 1280px;
        margin: 0 auto;
        border-radius: 1rem;
        /* background: #fff; */
        padding: 3rem 1.5rem;

        padding-bottom: 0;
    }

    .footer-content {
        max-width: 912px;
        margin: 0 auto;
    }

    .intro {
        display: flex;
        align-items: center;
        justify-content: space-between;

        margin-bottom: 1rem;
    }

    .socials {
        display: flex;
        gap: 1rem;
    }

    hr {
        border: 0;
        height: 1px;
        background: #abbbd3;

        margin-bottom: 2rem;
    }

    .footer-link-lists {
        display: flex;
        justify-content: space-between;

        margin-bottom: 3rem;
    }

    .list {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        flex: 1;
    }

    .list a {
        text-decoration: none;

        color: #1d1d1f;
        line-height: 100%; /* 1rem */
    }

    .list a.phone {
        text-decoration: underline;
    }

    .risk p,
    .risk a {
        color: #737373;
        font-size: 0.875rem;
        font-weight: 400;
        line-height: 150%; /* 1.3125rem */

        margin-bottom: 2rem;
    }

    .end {

        color: #737373;
        text-align: center;
        font-family: "Inter";
        font-size: 0.8125rem;
    }

    @media only screen and (min-width: 768px) {
        footer {
            padding: 0 2rem;
        }
    }
    @media only screen and (min-width: 990px) {
        .footer-container {
            padding: 4rem 1.5rem;
        }
    }
</style>

<footer>
