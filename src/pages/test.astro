---
import BaseHead from "../components/BaseHead.astro";
const pageTitle = "Robert Ventures: Test";
const pageDescription = "test.";
---

<style>
    .frame {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 4rem;
        width: 640px;
        height: 480px;
        border: 1px solid #ccc;
    }
</style>

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={pageTitle} description={pageDescription} />
        <script is:inline src="https://acrobatservices.adobe.com/view-sdk/viewer.js"></script>
    </head>
    <body>
        <section>
            <div class="section-container">
                <h1>Hello World</h1>
                <div id="adobe-dc-view" class="frame"></div>
            </div>
        </section>
        <script is:inline>
            document.addEventListener("adobe_dc_view_sdk.ready", function () {
                var adobeDCView = new AdobeDC.View({
                    clientId: "a2e91a32169c47009757382ad2fa89b8",
                    divId: "adobe-dc-view"
                });
                adobeDCView.previewFile({
                    content: { location: { url: "/pdf/brochure.pdf" } },
                    metaData: { fileName: "brochure.pdf" }
                });
            });
        </script>
    </body>
</html>
