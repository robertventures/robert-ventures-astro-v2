---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import FooterNew from "../components/FooterNew.astro";

const pageTitle = "Robert Ventures: Real Investors Reviews & Testimonials";
const pageDescription =
    "Read authentic reviews from Robert Ventures investors. Discover real experiences, returns, and success stories from our community of satisfied investors.";
---

<style>
    .section-container {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    h1{
        text-align: left;
        font-weight: 500;
        font-size: 48px;
        color: #152429;
        margin-left: 0;
        margin-right: 0;
        margin-bottom: 0;
        font-variant-numeric: lining-nums;
    }
    p{
        text-align: left;
        font-family: 'Roboto', sans-serif;
        font-weight: 400;
        font-size: 20px;
        line-height: 150%;
        margin-bottom: 0;
    }

    @media only screen and (min-width: 1024px){
        h1{
            font-size: 48px;
        }
        p{
            margin-bottom: 0;
        }
    }
</style>

<html lang="en">
    <head>
        <BaseHead title={pageTitle} description={pageDescription} />
    </head>
    <body>
        <Header />
        <section>
            <div class="section-container">
                <h1>Investors Reviews & Testimonials</h1>
                <p>
                    Discover real stories and feedback from investors who trust Robert Ventures.<br>
                    Explore their experiences, results, and why they choose to invest with us.
                </p>
                <div
                    class="senja-embed"
                    data-id="6a1ec5a8-74d7-4174-9867-47016915b018"
                    data-mode="shadow"
                    data-lazyload="false"
                    style="display: block; width: 100%;"
                >
                </div>
            </div>
        </section>
        <FooterNew />
    </body>
</html>

<script
    src="https://widget.senja.io/widget/6a1ec5a8-74d7-4174-9867-47016915b018/platform.js"
    type="text/javascript"
    async>
</script>
