        <meta property="og:url" content="https://robertventures.com/strategy" />
    </head>
    <body>
        <Header />
            <StrategyHero />
            <StrategyRealEstate />
            <StrategyDigital />
            <CTADark />
        <FooterOld />

        <script is:inline></script>
    </body>
</html>
