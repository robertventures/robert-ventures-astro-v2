---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";

import HeroboxWebinar10 from "../sections/HeroboxWebinar10.astro";
import Featured from "../sections/Featured.astro";
import BondsTrustedByNumbers from "../sections/BondsTrustedByNumbers.astro";
import AvailableBondsOfferings from "../sections/AvailableBondsOfferings.astro";
import Calculator from "../sections/Calculator.astro";
import HowItWorksV2 from "../sections/HowItWorksV2.astro";
import ReviewsV2 from "../sections/ReviewsV2.astro";
import FAQ from "../sections/FAQ.astro";

import FooterNew from "../components/FooterNew.astro";

const pageTitle = "Investment Webinar - Learn About 10% APY Bonds | Robert Ventures";
const pageDescription =
    "Review our investor webinar presentation to learn more about our 8-10% annual interest rate corporate bonds.";


export const prerender = false

---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={pageTitle} description={pageDescription} />
        <meta property="og:url" content="https://robertventures.com/webinar" />
        <!-- RTK Click Tracking -->
        <script is:inline>
            (function () {
                if (window.__rtkUniclickInit) return;
                window.__rtkUniclickInit = true;

                if (document.querySelector("script[data-rtk-uniclick]")) {
                    console.log("[RTK] uniclick.js already present");
                    return;
                }

                const host = window.location.hostname.replace(/^www\./, "");
                const script = document.createElement("script");
                script.src =
                    "https://rt.robertventures.com/uniclick.js?attribution=lastpaid&cookiedomain=" +
                    encodeURIComponent(host) +
                    "&cookieduration=90&defaultcampaignid=697c996793ba48f6ba89582f&regviewonce=false";
                script.defer = true;
                script.setAttribute("data-rtk-uniclick", "true");
                script.onload = function () {
                    window.__rtkUniclickLoaded = true;
                    console.log("[RTK] uniclick.js loaded", { host });
                    let checks = 0;
                    const interval = setInterval(function () {
                        checks += 1;
                        const match = document.cookie.match(/(?:^|; )rtkclickid-store=([^;]+)/);
                        const value = match ? match[1] : undefined;
                        console.log("[RTK] cookie check", { checks, value });
                        if (value || checks >= 5) clearInterval(interval);
                    }, 1000);
                };
                script.onerror = function (e) {
                    console.warn("[RTK] uniclick.js failed to load", e);
                };
                document.head.appendChild(script);
            })();
        </script>
    </head>
    <body>
        <Header />
        <HeroboxWebinar10 />
        <Featured />
        <BondsTrustedByNumbers />
        <AvailableBondsOfferings />
        <Calculator />
        <HowItWorksV2 />
        <ReviewsV2 />
        <FAQ />
        <FooterNew />
    </body>
</html>
